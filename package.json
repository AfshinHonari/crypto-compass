{ 
  "$schema": "https://www.raycast.com/schemas/extension.json",  
  "name": "crypto-compass",
  "title": "Crypto Compass",
  "description": "Navigate the crypto landscape with precision. Convert SLIP-0044 IDs, convert amounts, and get real-time prices.",
  "categories": ["Developer Tools", "Productivity", "Finance"],
  "icon": "assets/icon.png",
  "version": "1.0.0",
  "license": "MIT",
  
  "keywords": [
    "cryptocurrency",
    "crypto",
    "slip44",
    "converter",
    "blockchain",
    "tokens",
    "networks",
    "prices"
  ],
  "commands": [
    {
      "name": "convert",
      "title": "Convert SLIP-0044",
      "subtitle": "ID â‡„ Network Name",
      "mode": "view",
      "path": "src/convert.tsx",
      "description": "Convert SLIP-0044 coin type IDs to network names and vice versa",
      "keywords": ["slip44", "coin type", "network", "convert", "crypto", "blockchain"],
      "arguments": [
        {
          "name": "query",
          "type": "text",
          "label": "Query",
          "placeholder": "Type network name or coin type (e.g., 0, bitcoin, eth)...",
          "required": false
        }
      ]
    }
  ],
  "permissions": ["clipboard"],
  "preferences": [
    {
      "name": "showTestnets",
      "type": "checkbox",
      "title": "Show Testnets",
      "description": "Include testnet networks in search results",
      "default": true
    }
  ],
  "author": "Afshin Honari",
  "repository": "https://github.com/AfshinHonari/crypto-compass",
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "devDependencies": {
    "@raycast/api": "^1.64.4",
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {},
  "packageManager": "npm@11.4.1+sha512.fcee43884166b6f9c5d04535fb95650e9708b6948a1f797eddf40e9778646778a518dfa32651b1c62ff36f4ac42becf177ca46ca27d53f24b539190c8d91802b"
}
